---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../../consts";
import { ThemeToggleButton } from "./ThemeToggleButton";
import LogoIcon from "../icons/Logo";
---

<header class="transition-colors bg-zinc-50 dark:bg-zinc-600">
  <nav
    class="flex items-center justify-between px-[2rem] md:px-[3rem] md:py-[1rem]"
  >
    <a href="/" class="flex gap-2 items-center">
      <LogoIcon
        className="mb-3 text-[3rem] transition-colors text-zinc-900 dark:text-zinc-50"
      />
      <h2
        class="hidden transition-colors text-decoration-line: none; text-[1rem] md:block md:text-[1.5rem] font-bold text-zinc-900 dark:text-zinc-50"
      >
        {SITE_TITLE}
      </h2>
    </a>
    <div class="flex items-center">
      <div class="hidden md:flex gap-8 items-center mr-8">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
      <ThemeToggleButton client:load />
    </div>
  </nav>
</header>
